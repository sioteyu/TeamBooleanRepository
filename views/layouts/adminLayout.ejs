<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
    <meta charset="utf-8">
    <title><%=title%></title>
  </head>
  <body>
    <nav class="navbar" style="border-bottom:solid 1px">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">BookHub Admin</a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/admin">Dashboard</a></li>
          <li><a href="/users">Users</a></li>
          <li><a href="/UploadBooks">Upload Books</a></li>
          <li><a href="#">Logout</a></li>
        </ul>
      </div>
    </nav>
    <%
      var classes = ''
      if(page=='users'){
        classes = 'container'
      }else{
        classes = 'container col-md-6 col-md-offset-3'
      }

    %>
    <div class="<%=classes%>" style="padding-top:65px">
      <%- body %>
    </div>
    <script type="text/javascript">
      $(document).ready(function() {
      $('li.active').removeClass('active');
      $('a[href="' + location.pathname + '"]').closest('li').addClass('active');
      });
    </script>
</body>
</html>
