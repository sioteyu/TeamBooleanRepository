<h1 class="text-center">Edit a book</h1>
<form style="width:50%" class="center-block">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" value="<%=title%>">
  </div>
  <div class="form-group">
    <label>Author</label>
    <input type="text" class="form-control" value="<%=author%>">
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea class="form-control" rows="3"><%=description%></textarea>
  </div>
  <div class="form-group">
    <label>Genre</label>
    <br>
    <label class="checkbox-inline">
    <input type="checkbox" value="Adventure"> Adventure
    </label>
    <label class="checkbox-inline">
    <input type="checkbox" value="Fantasy"> Fantasy
    </label>
    <label class="checkbox-inline">
    <input type="checkbox" value="Magic"> Magic
    </label>
    <br>
    <label class="checkbox-inline">
    <input type="checkbox" value="Fiction"> Fiction
    </label>
    <label class="checkbox-inline">
    <input type="checkbox" value="Children's Book"> Children's Book
    </label>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">File input</label>
    <input type="file" id="exampleInputFile">
    <p class="help-block">Choose a book picture</p>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
